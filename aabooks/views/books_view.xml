<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem name="Books" id="book_group_menu" action="action_book_form" web_icon="aabooks,static/description/books.png"/>
        <record id="books_form_view" model="ir.ui.view">
            <field name="name">books.form</field>
            <field name="model">books.books</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Books">
                    <header>
                        <button name="order" string="Order" type="object" attrs="{'invisible':['|',('state','=', 'order'),('copies_left','=',0)]}"/>
                        <button name="deliver" string="Deliver" type="object" attrs="{'invisible':['|','|',('state','=','draft'),('state','=','deliver'),('copies_left','=',0)]}"/>
                        <button name="cancel" string="Cancel" type="object" attrs="{'invisible':['|',('state','=','draft'),('state','=','deliver')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="order,deliver,cancel"/>
                    </header>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="price"/>
                        <field name="number_of_pages"/>
                        <field name="publishing_house"/>
                        <field name="publish_year"/>
                        <field name="copies_left"/>
                        <field name="info"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="delivered"/>
                        <field name="total_price"/>
                        <field name="out_of_copies" widget="html" attrs="{'invisible':[('copies_left','!=',0)]}"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="books_tree_view" model="ir.ui.view">
            <field name="name">books.tree</field>
            <field name="model">books.books</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Books">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="price"/>
                    <field name="number_of_pages"/>
                    <field name="publishing_house"/>
                    <field name="publish_year"/>
                    <field name="copies_left"/>
                    <field name="info"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="delivered"/>
                </tree>
            </field>
        </record>
        <record id="books_search_view" model="ir.ui.view">
            <field name="name">books.search</field>
            <field name="model">books.books</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Books">
                        <field name="name"/>
                        <field name="author"/>
                        <field name="price"/>
                        <field name="number_of_pages"/>
                        <field name="publishing_house"/>
                        <field name="publish_year"/>
                        <field name="copies_left"/>
                        <field name="info"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="delivered"/>
                </search>
            </field>
        </record>
        <record id="action_book_form" model="ir.actions.act_window">
            <field name="name">All books</field>
            <field name="res_model">books.books</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="tree_view" ref="books_tree_view"/>
        </record>
        <record id="view_books_kanban" model="ir.ui.view">
        <field name="name">Kanban view</field>
        <field name="model">books.books</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_employee_kanban">
                <templates>
                    <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="o_kanban_image">
                            <img t-att-src="kanban_image('spital.doktori', 'foto_mesatare')"/>
                        </div>
                        <div class="oe_kanban_details">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <!--<field name="emri"/>-->
                                        <!--<field name="mbiemri"/>-->
                                    </strong>
                                </div>
                            </div>

                            <ul>
                                <li id="last_login"/>
                                <li>Title: <field name="name"/></li>
                                <li>Author: <field name="author"/></li>
                                <li>Price: <i class="fa fa-money"></i><field name="price"/></li>
                                <li>Page Number: <i class="fa fa-file-text-o"></i><field name="number_of_pages"/></li>
                                <li>Publish Year: <i class="fa fa-calendar"></i><field name="publish_year"/></li>
                                <li>Copies Left: <field name="copies_left"/></li>
                                <li>Phone: <i class="fa fa-mobile"></i> <field name="phone"/></li>
                                <li>Email: <i class="fa fa-envelope"></i> <field name="email"/></li>
                                <li>Delivered: <field name="delivered"/></li>
                            </ul>
                        </div>
                    </div>
                    </t>
                </templates>
            </kanban>
        </field>
        </record>
    </data>
</odoo>